#include<stdio.h>
#include<conio.h>
int main()
{
    int i,j,a=1,k,l;
    printf("*******\n");
    for(i=3;i>=1;i--)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        for(k=1;k<=a;k++)
        printf(" ");
        a=a+2;
        for(l=1;l<=i;l++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
